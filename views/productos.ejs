<%- include("template/cabecera", {titulo: 'Productos' }) %>

    <body>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                background-color: #b6b68f;
                color: rgb(6, 6, 6);
            }

            .panelSuperior {
                display: flex;
                justify-content: space-around;

            }

            .card-img-top {
                max-height: 200px;
                max-width: 150px;
            }
        </style>

        <!-- CHECK administrador -->

        <div class="panelSuperior">
            <h2 class="titulo"> PRODUCTOS </h2>
            <a class="btn btn-dark" href="http://localhost:8080"> Ir a inicio </a>
            <a class="btn btn-dark" href="http://localhost:8080/productos"> Ver todos los productos </a> 
            <a class="btn btn-dark" onclick="idGet()"> Ver producto con id: </a>
            <input type="number" id="id-get" aria-label=" Last name" class="form-control" placeholder="id producto">
            
            <a class="btn btn-primary" onclick="crearCarroNuevo()"> Crear Carro Nuevo </a>
            <a class="btn btn-primary" onclick="deleteCarro()" > Eliminar Carro por ID </a>
            <input type="number" id="idcarroborrar" aria-label=" Last name" class="form-control" placeholder="id producto">
            <a class="btn btn-primary" onclick="irCarroNumero()"> Ir al Carro de Compras NÂº: </a>
            <input type="number" id="irCarroId" aria-label=" Last name" class="form-control" placeholder="id carro">
            
        </div>
        <br>
        <!-- NAVBAR -->

